{
  "manifest_version": 3,
  "name": "디시갤 차단기",
  "description": "디시인사이드 특정 갤러리를 접속 시, 자동으로 메인 페이지로 리다이렉트 합니다.",
  "version": "7.1.3.2025",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "*://gall.dcinside.com/*",
        "*://m.dcinside.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "*://gall.dcinside.com/*",
    "*://m.dcinside.com/*"
  ],
  "action": {
    "default_title": "디시갤 차단기"
  }
}
